:css
  a {
    text-decoration:none;
  }

    /*6 pictures for the landing pages*/

    .thumbnail {
    width:300px;
    margin:5px;
    height:225px;
    background-color:pink;
    float:left;
    border-radius:10px;
    background-size:150%;
  }

    /* properties over the thumbanils */

  .hovereffect_thumbnail {
    width:280px;
    border-radius:10px;
    background-color:rgba(0,191,255,0);
    color:rgba(255,255,255,0);
    padding:10px;
    font-size:2em;
    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;

  }

  .hovereffect_thumbnail:hover {
    width:280px;
    height:auto;
    border-radius:10px;
    color:rgba(255,255,255,1);
    background-color:rgba(108,155,210,0.6);
    color:rgb(255,255,255);
    padding:10px;
    cursor:pointer;
  }
        /*the Featured article and background images*/

  .feature_landing {
    width:600px;
    height:450px;
    /*margin-top:15px;*/
    margin-right:15px;
    border-radius:10px;
    background-image:url("#{ asset_path('house-landing-header.jpg')}");
    background-size:130%;
    background-position:center;
    position: relative;
      overflow: hidden;
      float:left;
  }

        /* Title of the Featured article */

  .feature_title {
    width:590px;
    height:105px;
    margin-top:250px;
    border-radius:10px;
    background-color:rgba(0,191,255,0);
    color:rgba(255,255,255,0);
    padding:5px;
    font-size:2.5em;
    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
  }

  .feature_title:hover {
    width:590px;
    height:105px;
    border-radius:10px;
    margin-top:250px;
    color:rgba(255,255,255,1);
    background-color:rgba(0,191,255,0.6);
    color:rgb(255,255,255);
    padding:5px;
    cursor:pointer;
  }

  #date {
    font-size:.5em;
    text-align:right;
  }

        /*location of the box and properties of topic and social media boxes*/
  .topic_title {
    width:320px;
    height:450px;
    color:white;
    background-color:rgba(108,155,210,0.6);
    border-radius:10px;
    position: relative;
      overflow: hidden;
      margin-top:15px;
      margin-left:250px;

  }

        /*the small blurb in a darker box*/

  .topic_blurb {
    background-color:rgba(0,191,255,0.6);
    color:white;
    width:250px;
    height:auto;
    position:relative;
    padding:10px;
    border-radius:10px;
      margin-left:15px;
  }

  .topic_heading {
    font-size:3em;
    margin:10px 10px 10px 10px;
    font-weight:bold;
  }

        /*more blog posts*/

  .more_heading {
    font-size:1em;
    margin-left:10px;
  }

        /*featured blog posts*/

  .feature_heading {
    font-size:3em;
    margin:10px 10px 0px 10px;
  }

  .feature_top {
    background-color:rgba(108,155,210,0.7);
    color:rgb(255,255,255);
    width:600px;
    height:70px;
    position:relative;
    padding:10px;
    border-radius:10px;
  }

        /*next button*/

  #next_heading {
    font-size:.75em;
    margin:0px 10px 0px 10px;
    text-align:left;
    float:right;
  }


        /*footer*/


  #footer {
    list-style-type:none;
    margin:30px 0px 10px 250px;
    font-family:Calibri;
  }
    #footer a {
      color:#714B24;
      text-decoration:none;
      font-weight:bold;
    }

    #footer li {
      width:120px;
      float:left;
    }

    .footer-pipeline {
      margin:0px 0px 0px 10px;
    }

