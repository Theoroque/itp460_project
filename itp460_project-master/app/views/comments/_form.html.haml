= form_for @comment do |f|
  - if @comment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@comment.errors.count, "error")} prohibited this comment from being saved:"
      %ul
        - @comment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :comment
    = f.text_area :comment
  .field
    = f.label :approved
    = f.check_box :approved
  .field
    = f.label :article
    = f.text_field :article_id, value: @comment.article.id
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
